<div class="container">
  <div class="row mb-3">
    <h4>部署一覧</h4>
  </div>
  <%= form_with model: @department, url: '/departments', method: :post do |f| %>
    <div class="form-group row">
      <div class="col-3">
        <%= f.text_field :name, class: "form-control", placeholder: "部署名" %>
      </div>
      <div class="col-6">
        <%= f.submit "新規部署登録", class: "btn btn-outline-primary" %>
      </div>
    </div>
  <% end %>
  <div class="row mb-3">
    <div class="col-6">
      <table class="table table-bordered mb-5">
        <% @departments.each do |department| %>
          <tr>
            <td>
              <%= link_to employees_path(department_name: department.name), class: 'btn text_dark btn-default' do %>
                <%= department.name %>
              <% end %>
            </td>
            <td>
              <%= link_to edit_department_path(department.id), class: "btn btn-outline-success" do %>
                <span>編集</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>