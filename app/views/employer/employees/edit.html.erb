<div class="container">
  <div class="row mb-3">
    <h4>従業員情報編集</h4>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">ユーザーコード</label>
    <div class="col-4"><%= @employee.user_code %></div>
  </div>
  <%= form_with model: @employee do |f| %>
  <div class="form-group row">
    <label class="col-3 col-form-label">氏名</label>
    <div class="col">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">フリガナ</label>
    <div class="col">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">所属</label>
    <div class="col">
      <%= f.select :department_id, options_from_collection_for_select(Department.all, :id, :name) %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">従業員ステータス</label>
    <div class="col-4">
      <%= f.radio_button :is_active, "有効" %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, "無効" %>
      <%= f.label :is_active, "無効" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-4">
      <%= f.submit '変更を保存', class: 'btn btn-outline-success' %>
    </div>
  </div>
  <% end %>
</div>