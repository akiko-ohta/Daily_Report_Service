<h3>従業員一覧</h3>
  <%= link_to new_employee_registration_path, class: 'btn-success' do %>
    <span>新規従業員登録</span>
  <% end %>
　<% @employees.each do |employee| %>
　  <%= employee.user_code %>
    <%= employee.last_name %>
    <%= employee.first_name %>
    <%= employee.last_name_kana %>
    <%= employee.first_name_kana %>
    <% if employee.is_active == "有効" %>
      <span class="text-success"><strong><%= employee.is_active %></strong></span>
    <% else %>
      <span class="text-secondary"><strong><%= employee.is_active %></strong></span>
    <% end %>
    <%= link_to edit_employee_path(employee.id), class: 'btn-success' do %>
      <span>編集</span>
    <% end %>
  <% end %>