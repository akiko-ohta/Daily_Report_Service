<div class="container">
  <div class="row mb-3">
    <h4>検索結果一覧</h4>
  </div>
  <div class="row mb-3">
    <%= render "form" %>
  </div>
  <% @handovers.each do |handover| %>
    <div class="row mb-3">
      <% employer_daily_report = @daily_reports.find do |report|
          report.created_at.to_date == handover.created_at.to_date &&
          report.department == handover.department
      end %>
      <%= link_to employer_daily_report_path(employer_daily_report.id), class: 'text-dark btn-default' do %>
        <%= handover.handover.truncate(100) %>
        <%= handover.created_at.strftime('%Y/%m/%d') %>
      <% end %>
    </div>
  <% end %>
</div>