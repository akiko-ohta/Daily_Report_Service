<div class="container">
  <div class="row">
    <h4>新規業務登録</h4>
  </div>
  <%= form_with model: @task do |f| %>
  <div class="row">
    <label class="col-3 col-form-label">業務名</label>
    <div class="form-group row">
      <div class="col">
        <%= f.text_field :name, placeholder: "業務名", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-3 col-form-label">実行時間</label>
    <div class="form-inline row">
      <div class="col">
        <%= f.time_select :execution_time, { default: { hour: 0, min: 0 }, ampm: false },  class: "form-control" %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :department_id, :value => current_employee.department.id %>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-4 text-center">
      <%= f.submit '新規登録', class: "btn btn-outline-success" %>
    </div>
  </div>
  <% end %>
</div>