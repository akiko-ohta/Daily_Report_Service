<div class="container">
  <div class="row">
    <h4>業務情報編集</h4>
  </div>
  <%= form_with model: @task do |f| %>
  <div class="form-group row">
    <label class="col-3 col-form-label">業務名</label>
    <div class="col-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">実行時間</label>
    <div class="col-4">
      <%= f.time_select :execution_time,  class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-3 col-form-label">業務ステータス</label>
    <div class="col-4">
      <%= f.radio_button :is_active, "有効" %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, "無効" %>
      <%= f.label :is_active, "無効" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-4">
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>