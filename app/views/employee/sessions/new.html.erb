<div class="container">
  <%= form_with model: @employee,url: employee_session_path do |f| %>
    <div class="form-group row">
      <div class="input-group-prepend">
        <%= f.text_field :user_code, autofocus: true, class: "form-control", placeholder: "ユーザーコード" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
      </div>
    </div>
    <div class="form-group row">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>
    <div class="form-group row">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
</div>
